<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="AllTestsSuite" parallel="tests" verbose="1">

    <test name="PositiveTests">
        <classes>
            <class name="test.java.PositiveTests"/>
        </classes>
    </test>

    <test name="emptyUsername">
        <classes>
            <class name="test.java.PositiveTests">
                <methods>
                    <include name="emptyUsername"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="incorrectPassword1">
        <classes>
            <class name="test.java.NegativeTests">
                <methods>
                    <parameter name="password" value="incorrect_password"/>
                    <include name="incorrectPassword"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="incorrectPassword2">
        <classes>
            <class name="test.java.NegativeTests">
                <methods>
                    <parameter name="password" value="other_incorrect"/>
                    <include name="incorrectPassword"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
